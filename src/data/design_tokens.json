      "hero_display": {
        "size": "clamp(5rem, 10vw, 12rem)",
        "letter_spacing": "-0.05em",
        "case": "uppercase"
      }
    },
    "glassmorphism": {
      "dock_bg": "rgba(15, 23, 42, 0.7)",
      "blur_amount": "24px",
      "border_highlight": "rgba(255, 255, 255, 0.1)"
    },
    "animation_easing": {
      "expo_out": [0.16, 1, 0.3, 1],
      "fluid_spring": { "stiffness": 100, "damping": 30, "mass": 1 }
