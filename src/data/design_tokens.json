    "scroll_triggers": {
      "reveal_distance": "150px",
      "stagger_children": 0.05,
      "parallax_speed": {
        "slow": 0.1,
        "medium": 0.3,
        "fast": 0.6
      }
    },
    "fx_palette": {
      "grid_line": "#1E293B",
      "scanline_opacity": 0.03,
      "neon_pulse_intensity": "0 0 15px rgba(56, 189, 248, 0.5)"
    }
  }
}
