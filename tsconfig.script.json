{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true
  },
  "ts-node": {
    "esm": false,
    "transpileOnly": true
  },
  "include": ["scripts/**/*", "src/types/**/*"]
}